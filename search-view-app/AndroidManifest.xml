<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.actionbarsherlock.searchview.example"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Sherlock.SearchView.Light" >
        
        <activity
            android:name=".activity.ExampleListActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name=".activity.DynamicSearchViewActivity"
            android:theme="@style/Theme.Sherlock.SearchView.Light" 
            android:label="@string/dynamic_serch_view_title" 
            android:description="@string/dynamic_serch_view_descr"/>
        
        <activity 
            android:name=".activity.ResourceSearchViewActivity"
            android:theme="@style/Theme.Sherlock.SearchView" 
            android:label="@string/resource_search_view_title" 
            android:description="@string/resource_search_view_descr"/>
        
        
        <activity
            android:name=".activity.SearchViewTestActivity$Dark"
            android:theme="@style/Theme.Sherlock.SearchView" 
            android:label="@string/self_test_holo_dark_title" 
            android:description="@string/self_test_holo_dark_descr"/>
            />
            
        <activity 
            android:name=".activity.SearchViewTestActivity$Light"
            android:theme="@style/Theme.Sherlock.SearchView.Light" 
            android:label="@string/self_test_holo_light_title" 
            android:description="@string/self_test_holo_light_descr"/>
            />
            
        <activity
            android:name=".activity.SearchViewTestActivity$LightWithDarkActionBar"
            android:theme="@style/Theme.Sherlock.SearchView.Light.DarkActionBar" 
            android:label="@string/self_test_holo_light_dark_bar_title" 
            android:description="@string/self_test_holo_light_dark_bar_descr"/>
            />
        
    </application>

</manifest>